<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_ware_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.shoping.WareListActivity">
<LinearLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/back"
        android:layout_marginLeft="20px"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <TextView
         android:layout_gravity="center"
         android:gravity="center"
         android:text="商品列表"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/san"
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/frg_home_tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/wheat"
        app:tabIndicatorHeight="1dp"

        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="#f00"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/frg_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
